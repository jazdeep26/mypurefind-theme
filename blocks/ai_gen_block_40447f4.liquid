{% doc %}
  @prompt
    Make section "KWEEN" WRITE THIS WORD IN STYLISH WAY
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-kween-text-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background: {{ block.settings.background_color }};
  }

  .ai-kween-text__wrapper-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
    width: {{ block.settings.desktop_width_percent }}%;
  }

  .ai-kween-text__main-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    text-align: center;
    margin: 0;
    position: relative;
    z-index: 2;
    {% if block.settings.text_style == 'gradient' %}
      background: {{ block.settings.gradient_color_1 }};
      background: linear-gradient(
        {{ block.settings.gradient_angle }}deg,
        {{ block.settings.gradient_color_1 }} 0%,
        {{ block.settings.gradient_color_2 }} 50%,
        {{ block.settings.gradient_color_3 }} 100%
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% elsif block.settings.text_style == 'outline' %}
      color: transparent;
      -webkit-text-stroke: {{ block.settings.outline_width }}px {{ block.settings.text_color }};
      text-stroke: {{ block.settings.outline_width }}px {{ block.settings.text_color }};
    {% elsif block.settings.text_style == 'shadow' %}
      color: {{ block.settings.text_color }};
      text-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    {% else %}
      color: {{ block.settings.text_color }};
    {% endif %}
    {% if block.settings.text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif block.settings.text_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif block.settings.text_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
  }

  {% if block.settings.show_decorative_line %}
    .ai-kween-text__main-{{ ai_gen_id }}::before,
    .ai-kween-text__main-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      top: 50%;
      width: {{ block.settings.line_width }}px;
      height: {{ block.settings.line_height }}px;
      background: {{ block.settings.line_color }};
      transform: translateY(-50%);
    }

    .ai-kween-text__main-{{ ai_gen_id }}::before {
      left: -{{ block.settings.line_width | plus: 20 }}px;
    }

    .ai-kween-text__main-{{ ai_gen_id }}::after {
      right: -{{ block.settings.line_width | plus: 20 }}px;
    }
  {% endif %}

  {% if block.settings.show_background_shape %}
    .ai-kween-text__background-{{ ai_gen_id }} {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 1;
      opacity: {{ block.settings.shape_opacity }};
      {% if block.settings.shape_style == 'circle' %}
        width: 120%;
        height: 120%;
        border-radius: 50%;
        background: {{ block.settings.shape_color }};
      {% elsif block.settings.shape_style == 'rectangle' %}
        width: 110%;
        height: 110%;
        background: {{ block.settings.shape_color }};
        border-radius: {{ block.settings.shape_border_radius }}px;
      {% elsif block.settings.shape_style == 'underline' %}
        width: 100%;
        height: {{ block.settings.underline_height }}px;
        background: {{ block.settings.shape_color }};
        top: auto;
        bottom: 10%;
      {% endif %}
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-kween-text__main-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.6 }}px;
    }

    .ai-kween-text__wrapper-{{ ai_gen_id }} {
      width: 100%;
    }

    {% if block.settings.show_decorative_line %}
      .ai-kween-text__main-{{ ai_gen_id }}::before,
      .ai-kween-text__main-{{ ai_gen_id }}::after {
        width: {{ block.settings.line_width | times: 0.6 }}px;
      }

      .ai-kween-text__main-{{ ai_gen_id }}::before {
        left: -{{ block.settings.line_width | times: 0.6 | plus: 10 }}px;
      }

      .ai-kween-text__main-{{ ai_gen_id }}::after {
        right: -{{ block.settings.line_width | times: 0.6 | plus: 10 }}px;
      }
    {% endif %}
  }
{% endstyle %}

<div class="ai-kween-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-kween-text__wrapper-{{ ai_gen_id }}">
    {% if block.settings.show_background_shape %}
      <div class="ai-kween-text__background-{{ ai_gen_id }}"></div>
    {% endif %}
    <h2 class="ai-kween-text__main-{{ ai_gen_id }}">
      {{ block.settings.text }}
    </h2>
  </div>
</div>

